<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:text="Введите время начала приёма"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="70dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="368dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="180dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="368dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="280dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Принять"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="460dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="359dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:text="Укажите интервал применения препарата в день"
        app:layout_constraintEnd_toEndOf="@+id/spinner"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="360dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:text="Укажите время с которого нужно начать и закончить принятие препарата"
        app:layout_constraintEnd_toEndOf="@+id/spinner2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="143dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Укажите точное время применения препарата (если не нужно выбирать интервал)"
        app:layout_constraintEnd_toEndOf="@+id/spinner3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="245dp" />
</android.support.constraint.ConstraintLayout>